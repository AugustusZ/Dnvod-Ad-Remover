{
  "manifest_version": 2,

  "name": "Dnvod Ad Remover",
  "short_name": "NoDnAd",
  "description": "清除多瑙影院广告！Removes ads from dnvod.tv.",
  "version": "1.3",

  "icons": {
      "128": "icon-128.png",
      "48": "icon-48.png"
  },

  "content_scripts": [ {
      "js": [ "jquery-3.2.1.slim.min.js", "dnvodAdRemover.js" ],
      "matches": [ 
        "http://dnvod.tv/*",
        "http://www.dnvod.tv/*",
        "https://dnvod.tv/*",
        "https://www.dnvod.tv/*"
      ],
      "run_at": "document_end"
  } ],

  "permissions": [
    "http://dnvod.tv/*",
    "http://www.dnvod.tv/*"
  ]
}
