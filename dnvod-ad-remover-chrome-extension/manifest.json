{
  "manifest_version": 2,

  "name": "Dnvod Ad Remover",
  "short_name": "NoDnAd",
  "description": "增强多瑙体验，清除多瑙广告！",
  "version": "1.4.2",

  "icons": {
      "128": "icon-128.png",
      "48": "icon-48.png"
  },

  "content_scripts": [ {
      "js": [ "config.js", "jquery-3.2.1.slim.min.js", "dnvodAdRemover.js" ],
      "matches": [ 
        "http://dnvod.tv/*",
        "http://www.dnvod.tv/*",
        "https://dnvod.tv/*",
        "https://www.dnvod.tv/*"
      ],
      "run_at": "document_end"
  } ],

  "permissions": [
    "http://dnvod.tv/*",
    "http://www.dnvod.tv/*"
  ]
}
