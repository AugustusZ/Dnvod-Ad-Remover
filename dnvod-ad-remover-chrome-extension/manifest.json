{
  "manifest_version": 2,

  "name": "多瑙纯良 A Better Dnvod",
  "short_name": "BetterDnvod",
  "description": "纯：清除多瑙广告 | 良：增强多瑙体验 （原 Dnvod Ad Remover）",
  "version": "1.7",

  "icons": {
      "128": "icon-128.png",
      "48": "icon-48.png"
  },

  "browser_action": {
    "default_icon": "icon-48.png",
    "default_title": "多瑙纯良"
  },

  "content_scripts": [{
      "js": [ "injectCleaner.js"],
      "matches": [ 
        "*://*.dnvod.tv/*"
      ],
      "run_at": "document_end"
  },{
      "js": [ "injectEnhancer.js" ],
      "matches": [ 
        "*://*.dnvod.tv/*/*lay*"
      ],
      "run_at": "document_end"
  }],

  "permissions": [
    "*://*.dnvod.tv/*"
  ],

  "web_accessible_resources": [ "enhancer.js",  "config.js", "jquery-3.2.1.slim.min.js", "cleaner.js"]
}
