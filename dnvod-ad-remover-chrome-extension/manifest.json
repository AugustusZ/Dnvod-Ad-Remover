{
  "manifest_version": 2,

  "name": "多瑙纯良 A Better Dnvod: Cleaner & Enhancer",
  "short_name": "BetterDnvod",
  "description": "纯：清除多瑙广告 | 良：增强多瑙体验 （原 Dnvod Ad Remover）",
  "version": "1.5.1",

  "icons": {
      "128": "icon-128.png",
      "48": "icon-48.png"
  },

  "content_scripts": [{
      "js": [ "config.js", "jquery-3.2.1.slim.min.js", "cleaner.js" ],
      "matches": [ 
        "http://dnvod.tv/*",
        "http://www.dnvod.tv/*",
        "https://dnvod.tv/*",
        "https://www.dnvod.tv/*"
      ],
      "run_at": "document_end"
  },{
      "js": [ "enhancer.js" ],
      "matches": [ 
        "http://dnvod.tv/Movie/Readyplay*",
        "http://www.dnvod.tv/Movie/Readyplay*",
        "https://dnvod.tv/Movie/Readyplay*",
        "https://www.dnvod.tv/Movie/Readyplay*",
        "http://dnvod.tv/movie/Readyplay*",
        "http://www.dnvod.tv/movie/Readyplay*",
        "https://dnvod.tv/movie/Readyplay*",
        "https://www.dnvod.tv/movie/Readyplay*"
      ],
      "run_at": "document_end"
  }],

  "permissions": [
    "http://dnvod.tv/*",
    "http://www.dnvod.tv/*",
    "https://dnvod.tv/*",
    "https://www.dnvod.tv/*"
  ]
}
